<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reks.androidApp">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/applogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight">
        <activity android:name=".loanResult" android:parentActivityName=".homepage"/>
        <activity android:name=".loanOfficer" android:parentActivityName=".homepage"/>
        <activity android:name=".aboutus" android:parentActivityName=".homepage"/>
        <activity
            android:name=".feedback"
            android:parentActivityName=".homepage" />
        <activity
            android:name=".Support"
            android:parentActivityName=".homepage" />
        <activity
            android:name=".chatbot"
            android:parentActivityName=".homepage" />
        <activity android:name=".PaymentDetails" />
        <activity android:name=".PaypalTest" />
        <activity
            android:name=".LoanDetailsActivity"
            android:label="@string/title_activity_loan_details"
            android:parentActivityName=".homepage"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".HouseDetailsActivity"
            android:label="@string/title_activity_loan_details"
            android:parentActivityName=".homepage"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"
            android:parentActivityName=".HouseDetailsActivity" />
        <activity android:name=".homepage" />
        <activity android:name=".login" />
        <activity android:name=".Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>